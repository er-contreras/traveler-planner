<div class="container">
  <div class="row">
    <div class="col-lg-12 mt-5">
      <% if flash[:alert] %>
        <div class="alert alert-warning"><%= flash[:alert] %></div>
      <% end %>
      <div class="mx-auto mt-5" style="width: 400px" >
        <%= form_with(url: search_path, method: 'get', local: true) do %>
          <div class="form-group">
            <%= label_tag :country_ip, 'Search for a country' %>
            <%= text_field_tag :country_ip, nil, placeholder: 'Eg. 107.23.255.131', class: 'form-control' %>
          </div>

          <%= button_tag 'Search', class: 'btn btn-succes btn-block' %>
        <% end %>
      </div>
    </div>
  </div>
</div>